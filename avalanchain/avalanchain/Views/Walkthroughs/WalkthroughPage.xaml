<?xml version="1.0" encoding="UTF-8"?>
<CarouselPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="avalanchain.WalkthroughPage"
	xmlns:local="clr-namespace:avalanchain;assembly=avalanchain">

	<local:WalkthroughStepItemTemplate 
		BackgroundColor="{ DynamicResource BasePageColor}"
		Header="Welcome"
		Text="To a new world of posibilities, &#10; welcome to Avalanchain."
		IconText="{ x:Static local:GrialShapesFont.Public }" 
	    Icon="{ x:Static local:GrialShapesFont.Public }" 
		IconColor="#5F7DD4"
		ButtonBackgroundColor="#5F7DD4"
		ButtonText="Next"
		/>

	<local:WalkthroughStepItemTemplate 
		BackgroundColor="{ DynamicResource BasePageColor}"
		Header="Fast"
		Text="Save your time. &#10; Focus on what you do best."
		IconText="{ x:Static local:GrialShapesFont.FlashOn }"  
	    Icon="{ x:Static local:GrialShapesFont.IphoneStrokeDevice }" 
		IconColor="#7C4ECD"
		ButtonBackgroundColor="#7C4ECD"
		ButtonText="Next"
		/>

	<local:WalkthroughStepItemTemplate 
		BackgroundColor="{ DynamicResource BasePageColor}"
		Header="Secured"
		Text="All your data are secured. &#10; "
		IconText="{ x:Static local:GrialShapesFont.Lock }" 
	    Icon="{ x:Static local:GrialShapesFont.IphoneStrokeDevice }" 
		IconColor="#E51E61"
		ButtonBackgroundColor="#E51E61"
		ButtonText="Finish!" 
		/>

</CarouselPage>