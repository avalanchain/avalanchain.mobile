<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="avalanchain.Accounts"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:artina="clr-namespace:UXDivers.Artina.Shared;assembly=UXDivers.Artina.Shared"
    xmlns:local="clr-namespace:avalanchain;assembly=avalanchain">
    <ContentPage.Content>
        <Grid Padding="0" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="{artina:OnOrientationDouble PortraitPhone=100, LandscapePhone=100, PortraitTablet=120, LandscapeTablet=120}" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid
                x:Name="EcommerceProductGridBanner"
                Grid.Row="0"
                Padding="0"
                RowSpacing="0"
                Style="{StaticResource AccountProductGridBannerStyle}"
                VerticalOptions="Center">

                <Grid.RowDefinitions>
                    <RowDefinition Height="4*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Label
                            x:Name="SendLabel"
                            ClassId="Send"
                            FontFamily="FontAwesome"
                            FontSize="65"
                            HorizontalTextAlignment="Center"
                            IsVisible="{Binding ShowBackgroundColor}"
                            Opacity="1"
                            Text="{x:Static local:FontAwesome.FACircle}"
                            TextColor="{DynamicResource CirclenColor}"
                            VerticalTextAlignment="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="OnTapGestureRecognizerTapped" />
                            </Label.GestureRecognizers>

                        </Label>
                        <!--<Label x:Name="ExampleLabel" Text="{Binding clickLabel}"></Label>-->

                        <Label
                            FontFamily="FontAwesome"
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="{x:Static local:FontAwesome.FACreditCard}"
                            TextColor="{DynamicResource InverseTextColor}"
                            VerticalTextAlignment="Center" />
                    </Grid>
                    <Grid Grid.Column="1" HorizontalOptions="Center">
                        <Label
                            x:Name="ExchangeLabel"
                            ClassId="Exchange"
                            FontFamily="FontAwesome"
                            FontSize="65"
                            HorizontalTextAlignment="Center"
                            IsVisible="{Binding ShowBackgroundColor}"
                            Opacity="1"
                            Text="{x:Static local:FontAwesome.FACircle}"
                            TextColor="{DynamicResource CirclenColor}"
                            VerticalTextAlignment="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="OnTapGestureRecognizerTapped" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label
                            FontFamily="FontAwesome"
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="{x:Static local:FontAwesome.FAExchange}"
                            TextColor="{DynamicResource InverseTextColor}"
                            VerticalTextAlignment="Center" />
                    </Grid>

                    <Grid Grid.Column="2" HorizontalOptions="Center">
                        <Label
                            x:Name="PayLabel"
                            ClassId="Pay"
                            FontFamily="FontAwesome"
                            FontSize="65"
                            HorizontalTextAlignment="Center"
                            IsVisible="{Binding ShowBackgroundColor}"
                            Opacity="1"
                            Text="{x:Static local:FontAwesome.FACircle}"
                            TextColor="{DynamicResource CirclenColor}"
                            VerticalTextAlignment="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="OnTapGestureRecognizerTapped" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label
                            FontFamily="FontAwesome"
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="{x:Static local:FontAwesome.FAShoppingCart}"
                            TextColor="{DynamicResource InverseTextColor}"
                            VerticalTextAlignment="Center" />
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" HorizontalOptions="Center">
                        <Label
                            FontSize="15"
                            HorizontalTextAlignment="Center"
                            Text="Send"
                            VerticalTextAlignment="Center" />


                    </Grid>
                    <Grid Grid.Column="1" HorizontalOptions="Center">
                        <Label
                            FontSize="15"
                            HorizontalTextAlignment="Center"
                            Text="Exchange"
                            VerticalTextAlignment="Center" />
                    </Grid>
                    <Grid Grid.Column="2" HorizontalOptions="Center">
                        <Label
                            FontSize="15"
                            HorizontalTextAlignment="Center"
                            Text="Pay"
                            VerticalTextAlignment="Center" />
                    </Grid>


                </Grid>
