<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="avalanchain.AddCard"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:shared="clr-namespace:UXDivers.Artina.Shared;assembly=UXDivers.Artina.Shared">
    <ContentPage.Content>
        <ScrollView Padding="{DynamicResource MainWrapperPadding}">
            <Grid Padding="20" RowSpacing="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <!--<RowDefinition Height="40" />
                    <RowDefinition Height="40" />-->
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  -NAME FIELD  -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  NAME ENTRY  -->
                    <Entry
                        Grid.Column="0"
                        shared:EntryProperties.PlaceholderColor="{DynamicResource BaseTextColor}"
                        BackgroundColor="{DynamicResource PlaceholderColorEntry}"
                        HeightRequest="40"
                        Placeholder="Name" />

                    <!--  LAST NAME ENTRY  -->
                    <Entry
                        Grid.Column="1"
                        Margin="6,0,0,0"
                        shared:EntryProperties.PlaceholderColor="{DynamicResource BaseTextColor}"
                        BackgroundColor="{DynamicResource PlaceholderColorEntry}"
                        HeightRequest="40"
                        Placeholder="Last Name" />
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>

                    <!--  CARD NUMBER ENTRY  -->
                    <Entry
                        Grid.Column="0"
                        shared:EntryProperties.PlaceholderColor="{DynamicResource BaseTextColor}"
                        BackgroundColor="{DynamicResource PlaceholderColorEntry}"
                        HeightRequest="40"
                        Placeholder="Card Number" />

                    <!--  CVV NUMBER  -->
                    <Entry
                        Grid.Column="1"
                        Margin="6,0,0,0"
                        shared:EntryProperties.PlaceholderColor="{DynamicResource BaseTextColor}"
                        BackgroundColor="{DynamicResource PlaceholderColorEntry}"
                        HeightRequest="40"
                        Placeholder="CVV" />
                </Grid>

                <!--  EXPIRATION DATE  -->
                <Entry
                    Grid.Row="2"
                    shared:EntryProperties.PlaceholderColor="{DynamicResource BaseTextColor}"
                    BackgroundColor="{DynamicResource PlaceholderColorEntry}"
                    HeightRequest="40"
                    Placeholder="Expriation Date" />

                <!--  ADDRESS LINE 1  -->
                <!--<Entry
                    Grid.Row="3"
                    artina:EntryProperties.PlaceholderColor="{DynamicResource BaseTextColor}"
                    BackgroundColor="{DynamicResource PlaceholderColorEntry}"
                    HeightRequest="40"
                    Placeholder="Address Line 1" />-->

                <!--  ADDRESS LINE 2  -->
                <!--<Entry
                    Grid.Row="4"
                    artina:EntryProperties.PlaceholderColor="{DynamicResource BaseTextColor}"
                    BackgroundColor="{DynamicResource PlaceholderColorEntry}"
                    HeightRequest="40"
                    Placeholder="Address Line 2" />-->

                <Grid Grid.Row="3" RowSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>

                    <!--  CITY ENTRY  -->
                    <Entry
                        Grid.Column="0"
                        shared:EntryProperties.PlaceholderColor="{DynamicResource BaseTextColor}"
                        BackgroundColor="{DynamicResource PlaceholderColorEntry}"
                        HeightRequest="40"
                        Placeholder="City" />

                    <!--  STATE ENTRY  -->
                    <Entry
                        Grid.Column="1"
                        shared:EntryProperties.PlaceholderColor="{DynamicResource BaseTextColor}"
                        BackgroundColor="{DynamicResource PlaceholderColorEntry}"
                        HeightRequest="40"
                        Placeholder="State" />

                    <!--  CITY ENTRY  -->
                    <Entry
                        Grid.Row="1"
                        Grid.Column="0"
                        shared:EntryProperties.PlaceholderColor="{DynamicResource BaseTextColor}"
                        BackgroundColor="{DynamicResource PlaceholderColorEntry}"
                        HeightRequest="40"
                        Placeholder="Zip Code" />

                    <!--  STATE ENTRY  -->
                    <Entry
                        Grid.Row="1"
                        Grid.Column="1"
                        shared:EntryProperties.PlaceholderColor="{DynamicResource BaseTextColor}"
                        BackgroundColor="{DynamicResource PlaceholderColorEntry}"
                        HeightRequest="40"
                        Placeholder="Country" />
                </Grid>

                <!--  NOTES  -->
                <Grid Grid.Row="3" Padding="0.5">
                    <Editor shared:EntryProperties.PlaceholderColor="{DynamicResource BaseTextColor}" BackgroundColor="{DynamicResource PlaceholderColorEntry}" />
                </Grid>

                <!--  NOTES  -->
                <shared:Button
                    Grid.Row="4"
                    HorizontalOptions="{shared:OnOrientationLayoutOptions PortraitPhone=Fill,
                                                                          LandscapePhone=Center,
                                                                          PortraitTablet=Fill,
                                                                          LandscapeTablet=Center}"
                    Style="{DynamicResource PrimaryActionButtonStyle}"
                    Text="ADD"
                    VerticalOptions="End"
                    WidthRequest="{shared:OnOrientationDouble LandscapePhone=200,
                                                              LandscapeTablet=400}" />
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>